<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thehrmsinc.tictactoe.TicTacToeActivityFragment"
    tools:showIn="@layout/activity_tic_tac_toe"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<fragment
    android:id="@+id/mainFragment"
    android:name="com.thehrmsinc.tictactoe.TicTacToeActivityFragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    tools:layout="@layout/fragment_tic_tac_toe"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/infoFragment"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.thehrmsinc.tictactoe.InfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_info"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>